<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:gravity="center"
    tools:context=".activites.ChangePasswordActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_build_black_24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"

        android:gravity="center"
        android:text="Edit profile"
        android:textColor="@color/colorPrimary"
        android:textSize="36dp" />

    <EditText
        android:id="@+id/nameNewValue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/input"
        android:drawablePadding="10dp"
        android:inputType="textPersonName|text"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:text="Petar"
        android:textColorHint="@color/colorPrimary" />

    <EditText
        android:id="@+id/surnameNewValue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/input"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:padding="10dp"
        android:text="Petrovic"
        android:textColorHint="@color/colorPrimary" />

    <EditText
        android:id="@+id/emailNewValue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/input"
        android:drawablePadding="10dp"
        android:inputType="textPassword|textEmailAddress"
        android:padding="10dp"
        android:text="petar@gmail.com"

        android:textColorHint="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:background="@drawable/button_background_search"
            android:text="Confirm"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:background="@drawable/button_background_search"
            android:text="Cancel"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>


</LinearLayout>