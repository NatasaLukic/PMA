<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutServiceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_below="@id/imageView4"
        android:background="?android:attr/listDivider"/>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="138dp"
        android:layout_height="205dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_about"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/imageView4"
        android:background="@color/colorLightGray"/>

    <androidx.cardview.widget.CardView xmlns:cardView="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="20dp"
        app:cardCornerRadius="15dp"
        cardView:cardCornerRadius="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="115dp"
            android:textSize="12dp"
            android:text="Landline phone:  011/3298-448"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="133dp"
            android:text="Mobile phone:     064/4928-218"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:text="Email"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="177dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:text="servis1@gmail.com"/>


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="Narodnog Fronta 15" />
        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginTop="65dp"
            android:layout_gravity="center_horizontal"
            android:text="Novi Sad, 21000" />
        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="85dp"
            android:text="Serbia" />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView xmlns:cardView="http://schemas.android.com/tools"
        android:layout_width="335dp"
        android:id="@+id/cardViewAbout"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="15dp"
        cardView:cardCornerRadius="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About us"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView22"
            android:paddingLeft="10dp"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:text="Service 1 car agency based in Novi Sad has an excellent ratio of price and quality of vehicles. Our vehicles are not older than five years and all are technically correct. We offer you rental of new cars with complete equipment at extremely favorable rental conditions. It is up to you to choose the vehicle that suits you and enjoy a carefree and comfortable ride. We guarantee: professionalism, reliability, safety"
            />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:cardView="http://schemas.android.com/tools"
            android:layout_width="335dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cardViewAbout"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            cardView:cardCornerRadius="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:id="@+id/listRev"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</ScrollView>