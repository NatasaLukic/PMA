<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/divider"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/type"
        android:text="car with:">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="62dp"
        android:layout_toRightOf="@+id/seats"
        android:text="seats">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/doors"
        android:text="doors">

    </TextView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
       android:layout_centerHorizontal="true"
        android:text="asdsadasd"
        android:textSize="25dp">
    </TextView>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:id="@+id/line1"
        android:layout_centerInParent="true"
        android:background="#c0c0c0" />

    <ImageView
        android:id="@+id/vehiclePhoto"
        android:layout_width="205dp"
        android:layout_height="189dp"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:text="ajskd"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/doors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/vehiclePhoto"
        android:text="Num of doors">

    </TextView>

    <TextView
        android:id="@+id/seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doors"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/vehiclePhoto"
        android:text="Num of seats"></TextView>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_below="@+id/vehiclePhoto"
        android:layout_marginBottom="10dp"
        android:id="@+id/line2"
        android:layout_centerInParent="true"
        android:background="#c0c0c0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seats"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:background="@drawable/button_background_search"
        android:text="Details"
        android:textColor="@color/whiteTransp">

    </Button>

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:gravity="right"
        android:layout_marginBottom="15dp"
        android:text="asds"
        android:textSize="22dp">

    </TextView>

</RelativeLayout>