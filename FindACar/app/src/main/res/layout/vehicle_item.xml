<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/divider"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/type"
        android:text="car with:"
        app:fontFamily="serif">

    </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="69dp"
            android:layout_toRightOf="@+id/seats"
            android:text="seats"
            android:textSize="12dp"
            app:fontFamily="serif">

        </TextView>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/doors"
        android:textSize="12dp"
        android:text="doors"
        app:fontFamily="serif">

    </TextView>

    <TextView
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="asdsadasd"
        android:textSize="22dp"
        app:fontFamily="serif"></TextView>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="5dp"
        android:id="@+id/line1"
        android:layout_centerInParent="true"
        android:background="#c0c0c0" />

    <ImageView
        android:id="@+id/vehiclePhoto"
        android:layout_width="180dp"
        android:layout_height="171dp"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="7dp"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:text="ajskd"
        android:textStyle="bold"
        app:fontFamily="serif">

    </TextView>

    <TextView
        android:id="@+id/doors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="8dp"
        android:textSize="12dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/imageDoors"
        android:text="Num of doors"
        app:fontFamily="serif">

    </TextView>

        <TextView
            android:id="@+id/seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doors"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/imageSeats"
            android:text="Num of seats"
            android:textSize="12dp"
            app:fontFamily="serif"></TextView>

        <View
            android:id="@+id/line2"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_below="@id/reg"
            android:layout_centerInParent="true"
            android:layout_marginTop="19dp"
            android:background="#c0c0c0" />

        <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/imageSeats"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:src="@drawable/ic_manual" />

        <TextView
            android:id="@+id/aut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seats"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/vehiclePhoto"
            android:text="man/aut"
            android:textSize="12dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_below="@id/line2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background_search"
            android:fontFamily="serif"
            android:text="@string/btnDetails"
            android:textColor="@color/colorWhite">

        </Button>

        <ImageView
        android:id="@+id/imageDoors"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:layout_below="@id/type"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:src="@drawable/ic_door" />

    <ImageView
        android:id="@+id/imageSeats"
        android:layout_width="22dp"
        android:layout_height="18dp"
        android:layout_below="@id/imageDoors"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:src="@drawable/ic_seat" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-27dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:text="asds"
            android:textSize="20dp"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehiclePhoto"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="-25dp"
            android:fontFamily="serif"
            android:text="Vehicle registrated until "
            android:textSize="11dp">

        </TextView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
