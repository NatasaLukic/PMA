<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OneFavoriteVehicleFragment">

    <TextView
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="asdsadasd"
        android:textSize="22dp"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/type"
        android:text="car with:">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="69dp"
        android:layout_toRightOf="@+id/seats"
        android:text="seats"
        android:textSize="12dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/doors"
        android:textSize="12dp"
        android:text="doors">

    </TextView>


    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="5dp"
        android:id="@+id/line1"
        android:layout_centerInParent="true"
        android:background="#c0c0c0" />

    <ImageView
        android:id="@+id/vehiclePhoto"
        android:layout_width="160dp"
        android:layout_height="151dp"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="20dp"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:text="ajskd"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/doors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="8dp"
        android:textSize="12dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/imageDoors"
        android:text="Num of doors">

    </TextView>

    <TextView
        android:id="@+id/seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doors"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/imageSeats"
        android:text="Num of seats"
        android:textSize="12dp"></TextView>


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/imageSeats"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:src="@drawable/ic_manual" />

    <TextView
        android:id="@+id/aut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seats"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:text="man/aut"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageDoors"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:layout_below="@id/type"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:src="@drawable/ic_door" />

    <ImageView
        android:id="@+id/imageSeats"
        android:layout_width="22dp"
        android:layout_height="18dp"
        android:layout_below="@id/imageDoors"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/vehiclePhoto"
        android:src="@drawable/ic_seat" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aut"
        android:id="@+id/expand_list_review"/>
</RelativeLayout>