<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".activites.VehicleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/slider"
            android:layout_width="320dp"
            android:layout_height="280dp"
            android:layout_below="@id/up_layout"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:gravity="right"
        android:fontFamily="@font/fjord_one"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="*Swipe left/right for images"
        android:textSize="11dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:id="@+id/line"
        android:background="@color/colorLightGray"
        android:layout_below="@id/hint"/>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
        android:id="@+id/up_layout"
        android:layout_marginTop="15dp"
        android:gravity="center"
      android:layout_below="@id/toolbar">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Name of car"
            android:textSize="20dp"
            android:textStyle="bold"
            app:fontFamily="@font/fjord_one" />

     <TextView
        android:id="@+id/spec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/name"
        android:text="car specifications"
         android:fontFamily="@font/fjord_one"
        android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/line"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/reg"
            android:fontFamily="@font/fjord_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Vehicle registrated until " />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/reg"
            android:text="Date"
            android:textStyle="italic" />

        <Button
            android:id="@+id/book"
            android:layout_width="119dp"
            android:layout_height="63dp"
            android:layout_below="@id/reg"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/button_background_search"
            android:text="Book"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/photoSeat"
            android:layout_width="28dp"
            android:layout_height="26dp"
            android:layout_below="@id/date"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/book"
            android:src="@drawable/car_seat" />

        <TextView
            android:id="@+id/numOfSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/photoSeat"
            android:text="asd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/numOfSeats"
            android:text="seats" />

        <ImageView
            android:id="@+id/photoDoor"
            android:layout_width="28dp"
            android:layout_height="26dp"
            android:layout_below="@id/photoSeat"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/book"
            android:src="@drawable/car_door" />

        <TextView
            android:id="@+id/numOfDoors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numOfSeats"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/photoDoor"
            android:text="asd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numOfSeats"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/numOfDoors"
            android:text="doors" />

        <ImageView
            android:layout_width="27dp"
            android:id="@+id/airC"
            android:layout_height="25dp"
            android:layout_below="@id/photoDoor"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/book"
            android:src="@drawable/air_cond" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numOfDoors"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/airC"
            android:textSize="12dp"
            android:id="@+id/airC_text"
            android:text="Air conditioning" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/airC"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:id="@+id/autPic"
            android:layout_toRightOf="@id/book"
            android:src="@drawable/pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/airC_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/autPic"
            android:id="@+id/auto_text"
            android:text="text" />
    </RelativeLayout>
    </LinearLayout>


</ScrollView>